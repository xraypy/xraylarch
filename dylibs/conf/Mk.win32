# Make configuration for Win32 using MINGW and gfortran
F77         = gfortran -O2 -Wall
AR          = ar
RANLIB      = ranlib
CC          = gcc -O2
LINK        = gcc -O2 -shared
LINK_FFLAGS = -Wl,--add-stdcall-alias -lgfortran
LINK_CFLAGS = -Wl,--add-stdcall-alias -lgcc -lm -mwindows

DLLPRE      =
DLLEXT      = dll
